<Window x:Class="Wpf.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="346" Width="604">
    <Grid>
        <Grid>

            <DataGrid x:Name ="dgGirls" 
                      HorizontalAlignment="Center"
                      Height="236" 
                      Margin="0,84,0,0" 
                       VerticalAlignment="Top" Width="584" ColumnWidth="*" 
                      AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedItem}" >

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ім'я" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Вік" Width="80" Binding="{Binding Age}" />
                    <DataGridTextColumn Header="Ріст" Width="80" Binding="{Binding Height}" />
                    <DataGridTextColumn Header="Вага" Width="80" Binding="{Binding Weight}" />


                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <DockPanel Background="#E0FFFF">
                            <Image Source="{Binding Image}"
                                   Height="45"
                                   Width="60"/>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                <TextBlock Text="{Binding Age}" Grid.Column="1" />
                                <TextBlock Text="{Binding Height}" FontWeight="Bold" Grid.Row="1" />
                                <TextBlock Text="{Binding Weight}" Grid.Column="1" Grid.Row="1" />
                            </Grid>
                        </DockPanel>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
            <Button x:Name ="btnGetGirls"
                    Content="Отримати дані"
                    HorizontalAlignment="Left"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    Width="146" Height="58"
                    Click="BtnGetGirls_Click"/>
            <TextBox x:Name="txb"
                     HorizontalAlignment="Left" 
                     Margin="172,10,0,0" 
                     Text="TextBox" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="422" 
                     Height="58"/>

        </Grid>
    </Grid>
</Window>
